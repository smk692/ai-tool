{
  "mcpServers": {
    "grafana": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "--network", "host",
        "-e", "GRAFANA_URL",
        "-e", "GRAFANA_SERVICE_ACCOUNT_TOKEN",
        "mcp/grafana",
        "--disable-write",
        "-t", "stdio"
      ],
      "description": "Grafana MCP - Prometheus/Loki/Tempo 메트릭 및 로그 조회"
    },
    "sentry": {
      "command": "npx",
      "args": ["@sentry/mcp-server@latest"],
      "env": {
        "SENTRY_ACCESS_TOKEN": "${SENTRY_ACCESS_TOKEN}"
      },
      "description": "Sentry MCP - 에러 모니터링 및 이슈 조회"
    },
    "aws": {
      "command": "uvx",
      "args": [
        "mcp-proxy-for-aws@latest",
        "https://aws-mcp.us-east-1.api.aws/mcp",
        "--region", "ap-northeast-2",
        "--read-only"
      ],
      "env": {
        "AWS_PROFILE": "${AWS_PROFILE}",
        "AWS_REGION": "ap-northeast-2"
      },
      "description": "AWS MCP - EC2/ECS/MSK 등 AWS 리소스 상태 조회 (readonly)"
    },
    "swagger": {
      "command": "java",
      "args": ["-jar", "${SWAGGER_MCP_JAR_PATH}"],
      "description": "Swagger MCP - 마이크로서비스 API 명세 조회"
    },
    "jira": {
      "command": "npx",
      "args": ["-y", "@aashari/mcp-server-atlassian-jira"],
      "env": {
        "ATLASSIAN_SITE_NAME": "${ATLASSIAN_SITE_NAME}",
        "ATLASSIAN_USER_EMAIL": "${ATLASSIAN_USER_EMAIL}",
        "ATLASSIAN_API_TOKEN": "${ATLASSIAN_API_TOKEN}"
      },
      "description": "Jira MCP - 이슈/프로젝트 조회 (읽기 전용으로 사용)"
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.notion.com/mcp"],
      "description": "Notion MCP - 페이지/데이터베이스 조회 (OAuth 인증)"
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      },
      "description": "Slack MCP - 채널/메시지/사용자 조회"
    }
  }
}
