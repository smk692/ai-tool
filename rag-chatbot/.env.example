# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your_signing_secret

# Claude Agent SDK (anthropic API key 필요)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Vector DB (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=rag_documents

# Redis (대화 컨텍스트 저장)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# RAG 설정
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7
RAG_MAX_CONTEXT_TOKENS=4000

# 대화 컨텍스트 설정
CONVERSATION_TTL_SECONDS=3600
CONVERSATION_MAX_MESSAGES=10

# 로깅
LOG_LEVEL=INFO
LOG_FORMAT=json

# Tokenizers 경고 비활성화 (fork 이후 병렬처리 관련)
TOKENIZERS_PARALLELISM=false

# ===== MCP 서버 설정 =====
# 각 MCP 서버별 필수값 및 선택값 정리

# ----- Grafana MCP (Prometheus/Loki/Tempo 조회) -----
# [필수] Grafana 인스턴스 URL
GRAFANA_URL=https://grafana.your-domain.com
# [필수] Grafana Service Account 토큰 (Admin → Service Accounts에서 생성, Viewer 권한)
GRAFANA_SERVICE_ACCOUNT_TOKEN=your-grafana-service-account-token

# ----- Sentry MCP (에러 모니터링) -----
# [필수] Sentry User Auth 토큰 (Settings → Auth Tokens에서 생성)
# 필요 스코프: org:read, project:read, project:write, team:read, team:write, event:write
SENTRY_ACCESS_TOKEN=your-sentry-user-auth-token
# [선택] Self-hosted Sentry인 경우만 설정 (SaaS 사용 시 주석 유지)
# SENTRY_HOST=sentry.your-domain.com

# ----- AWS MCP (EC2/ECS/MSK 등 리소스 조회 - readonly) -----
# [필수] AWS CLI 프로필명 (aws configure로 설정)
AWS_PROFILE=default
# [필수] AWS 리전
AWS_REGION=ap-northeast-2
# [필수] IAM 정책에 aws-mcp:CallReadOnlyTool만 허용 (CallPrivilegedTool 제외)

# ----- Swagger MCP (API 명세 조회) -----
# [필수] petfriends swagger-mcp-server JAR 파일 경로
# 빌드: git clone git@github.com-work:teampetfriends/petfriends-mcp-server.git && ./gradlew build -x test
SWAGGER_MCP_JAR_PATH=/Users/sonmingi/Desktop/work/ai-tool/shared/jdk/swagger-mcp-server.jar
